#!/bin/sh

. $EXTERNALS_CONFIG

tar zxvf c-ares-1.3.0.tar.gz
cd c-ares-1.3.0 && echo Changed directory to `pwd`

# This version of c-ares is used to build the CREAM client libraries.
# The tarball was downloaded from
#  http://c-ares.haxx.se/c-ares-1.3.0.tar.gz

./configure --prefix=$PACKAGE_INSTALL_DIR
if [ $? -ne 0 ]
then
        echo "configure failed!"
        exit 1
fi

make
if [ $? -ne 0 ]
then
        echo "make failed!"
        exit 1
fi

make install
if [ $? -ne 0 ]
then
        echo "make install failed!"
        exit 3
fi

exit 0;
