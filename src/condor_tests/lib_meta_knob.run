sub ccv_getval {
	my $lookup = shift;
	my @response = ();
	my $res = runCondorTool("condor_config_val $lookup",\@response,2,{emit_output=>0,expect_result=>\ANY});
	if($res == 1) {
	my $value = $response[0];
	fullchomp($value);
	#print "returning $value\n";
	return($value);
	} else {
		return("ccv of $lookup failed");
	}
};


sub get_lookups {
	foreach my $key (sort keys %lookups) {
		#print "looking up $key\n";
		$lookups{$key} = ccv_getval($key);
	}
};

sub show_lookups {
	foreach my $key (sort keys %lookups) {
		print "$key: $lookups{$key}\n";
	}
};

