NAME = hdfs_plugin
all_target( $(NAME) )

JAVA_HOME=/s/java/i386_cent40/
LIB = $(STD_LIBS)

HDFS_FLAGS = -I$(JAVA_HOME)/include -I$(JAVA_HOME)/include/linux 
CFLAGS = $(STD_C_FLAGS) $(HDFS_FLAGS)
LDFLAGS = -L$(JAVA_HOME)/jre/lib/i386/server -L. -ljvm -lhdfs -lpthread
C_PLUS_FLAGS = -g $(HDFS_FLAGS) $(STD_C_PLUS_FLAGS)

OBJ = hdfs_plugin.o hdfs_plugin_main.o
public_c_plus_target($(NAME), sbin, $(OBJ), $(LIB))

html:
release:: all
stripped:: all
static:: all
clean::
testbin:: all
