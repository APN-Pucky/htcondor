#! /bin/csh

if( $#argv != 2 ) then
	echo Usage: afs_pong prog_name host_name
	exit 1 
endif

set cmd_name = $argv[1]
set host_name = $argv[2]
set wd = `pwd`


noenv $cmd_name

while ( 1 )
	rsh $host_name "cd $wd; noenv $cmd_name __restart__ "
	if( $status == 13 ) break
	noenv $cmd_name __restart__ 
	if( $status == 13 ) break
end
