NAME = condor_shadow.globus
all_target($(NAME) condor_glidein)

#if IS_CLIPPED
CLIPPED = -DCLIPPED
#endif

CFLAGS = $(STD_C_FLAGS) $(CLIPPED)
C_PLUS_FLAGS = $(STD_C_PLUS_FLAGS) $(CLIPPED)
LIB = $(STD_LIBS)

OBJ = gshadow.o 

c_plus_target($(NAME),$(OBJ),$(LIB))

release_copy_target($(NAME),sbin,$(NAME),EXECUTABLE_MODE)
release_copy_target(condor_glidein,sbin,condor_glidein,EXECUTABLE_MODE)

strip_copy_target($(NAME),$(STRIP_DIR)/sbin,$(NAME),EXECUTABLE_MODE)
strip_copy_target(condor_glidein,$(STRIP_DIR)/sbin,condor_glidein,EXECUTABLE_MODE)

static_copy_target($(NAME),$(STATIC_DIR)/sbin,$(NAME),EXECUTABLE_MODE)
static_copy_target(condor_glidein,$(STATIC_DIR)/sbin,condor_glidein,EXECUTABLE_MODE)

purecov_c_plus_target($(NAME).pc,$(OBJ),$(LIB))
pure_c_plus_target($(NAME).pure,$(OBJ),$(LIB))
html:
