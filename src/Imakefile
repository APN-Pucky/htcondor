CFLAGS = $(STD_C_FLAGS)

#if HAS_FORTRAN
  TEST_SUITE_F = test_suite_F.V5
#endif

#if !HAS_X
#   define kbdd
#endif

#if !DOES_CHECKPOINTING
#   define standalone
#endif

#if WANT_PVM && HAS_PVM
   #define PvmProgs starter.jim shadow.jim 
   #define PvmDirs strip_pvm strip_pvm/lib strip_pvm/sbin
#else
   #define PvmProgs
   #define PvmDirs
#endif

#if USE_CONFIG_SERVER
   CONFIG_SERVER = config_server
#endif

#define Programs \
		accountant.V6 ckpt_server $(CONFIG_SERVER) \
		master.V6 negotiator.V6 schedd.V6 prio q.V6 rm.V6 \
		scripts shadow.V6 startd.V6 starter.V5 submit.V6 status.V6 \
		tools kbdd collector.V6 PvmProgs

#define Libraries \
		util_lib c++_util ckpt io classad daemon_core.V6 \
		syscall_lib

#define Directories \
	release_dir release_dir/bin release_dir/lib release_dir/sbin \
	strip_dir strip_dir/bin strip_dir/sbin strip_dir/lib \
	strip_dir/etc strip_dir/etc/examples PvmDirs \
	strip_ckpt_server strip_ckpt_server/sbin strip_ckpt_server/etc \
	strip_ckpt_server/etc/examples

all: h makefiles Directories Libraries Programs examples
release:: all
stripped:: all

#define SubmitSbinFiles sbin/condor_master sbin/condor_schedd \
	sbin/condor_shadow sbin/condor_preen sbin/condor_checkpoint \
	sbin/condor_off sbin/condor_on sbin/condor_reconfig \
	sbin/condor_reconfig_schedd sbin/condor_reschedule \
	sbin/condor_restart sbin/condor_vacate sbin/condor_master_off

#ifndef PublicTarget
#define PublicTarget /p/condor/workspaces/release/V6_release
#endif
PUBLIC_TARGET = PublicTarget
public: release.tar
	rm -f $(PUBLIC_TARGET)/release.tar
	cp strip_dir/release.tar $(PUBLIC_TARGET)

release.tar: stripped
	cd strip_dir; rm -f release.tar; tar -cvf release.tar etc bin lib sbin

submit.tar: stripped
	cd strip_dir; rm -f submit.tar; tar -cvf submit.tar etc bin lib SubmitSbinFiles

#if WANT_PVM && HAS_PVM
pvm.tar: stripped
	cd strip_pvm; rm -f pvm.tar; tar -cvf pvm.tar lib sbin
#endif

simple_dir_target(release_dir)
simple_dir_target(release_dir/bin)
simple_dir_target(release_dir/lib)
simple_dir_target(release_dir/sbin)
simple_dir_target(strip_dir)
simple_dir_target(strip_dir/bin)
simple_dir_target(strip_dir/lib)
simple_dir_target(strip_dir/sbin)
simple_dir_target(strip_dir/etc)
simple_dir_target(strip_dir/etc/examples)
#if WANT_PVM && HAS_PVM
simple_dir_target(strip_pvm)
simple_dir_target(strip_pvm/sbin)
simple_dir_target(strip_pvm/lib)
#endif
simple_dir_target(strip_ckpt_server)
simple_dir_target(strip_ckpt_server/sbin)
simple_dir_target(strip_ckpt_server/etc)
simple_dir_target(strip_ckpt_server/etc/examples)
object_target(util_lib)
