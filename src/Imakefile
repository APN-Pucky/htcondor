#if WANT_PVM && HAS_PVM
   object_target(starter.jim)
   object_target(shadow.jim)
#endif

makefiles:: h/Makefile
h/Makefile:
	cd h; imake IMAKE_FLAGS
h: h/Makefile
	cd h; make

object_target(prio)
object_target(scripts)

check_platform_target

clean::
	cd h; make clean
	rm -rf Makefile */Makefile */Makefile.* release_dir strip_dir \
		strip_pvm strip_ckpt_server
