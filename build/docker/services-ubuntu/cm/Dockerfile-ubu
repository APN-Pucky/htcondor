# This is a central manager image for HTCondor
ARG UBU
ARG VERSION
ARG SUFFIX

FROM htcondor/base:${VERSION}-ubu${UBU}${SUFFIX}

ARG UBU
ARG VERSION
ARG BUILDDATE

# https://label-schema.org/rc1
LABEL org.label-schema.name="htcondor/cm:${VERSION}-ubu${UBU}${SUFFIX}" \
      org.label-schema.description="HTCondor ${VERSION} central manager image for Ubuntu ${UBU}" \
      org.label-schema.vendor="HTCondor" \
      org.label-schema.license="Apache-2.0" \
      org.label-schema.build-date="${BUILDDATE}"

COPY cm/condor/*.conf /etc/condor/config.d/

EXPOSE 9618
